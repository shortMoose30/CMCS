<Window x:Class="ContractClaimSystem.ManageContracts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Contracts" Height="600" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Manage Contracts" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListView Name="lvContracts" Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Contract ID" Width="100" DisplayMemberBinding="{Binding ContractID}"/>
                        <GridViewColumn Header="Contract Name" Width="200" DisplayMemberBinding="{Binding ContractName}"/>
                        <GridViewColumn Header="Start Date" Width="150" DisplayMemberBinding="{Binding StartDate}"/>
                        <GridViewColumn Header="End Date" Width="150" DisplayMemberBinding="{Binding EndDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Add Contract" Width="120" Height="30" Margin="10,20,0,0" Click="BtnAddContract_Click"/>
        </StackPanel>
    </Grid>
</Window>
