<Window x:Class="ContractClaimSystem.SubmitClaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="600" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Submit a Claim" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Contract ID:" />
            <TextBox Name="txtContractID" Width="200" Margin="0,10"/>

            <TextBlock Text="Claim Amount:" />
            <TextBox Name="txtClaimAmount" Width="200" Margin="0,10"/>

            <TextBlock Text="Claim Description:" />
            <TextBox Name="txtClaimDescription" Width="200" Height="100" TextWrapping="Wrap" Margin="0,10"/>

            <TextBlock Text="Claim Date:" />
            <DatePicker Name="dpClaimDate" Width="200" Margin="0,10"/>

            <Button Content="Submit" Width="120" Height="30" HorizontalAlignment="Left" Margin="0,20,0,0" Click="BtnSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>
